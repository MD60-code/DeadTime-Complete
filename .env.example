# DeadTime Mobile App - Environment Variables Template
# Copy this file to .env and fill in your actual values

# API Configuration
API_BASE_URL=https://api.deadtime.app
API_VERSION=v1
API_TIMEOUT=30000

# Google Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=deadtime-app.firebaseapp.com
FIREBASE_PROJECT_ID=deadtime-app
FIREBASE_STORAGE_BUCKET=deadtime-app.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
FIREBASE_APP_ID=your_firebase_app_id_here

# Stripe Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# App Configuration
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1
APP_ENVIRONMENT=development

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_LOCATION_TRACKING=true
ENABLE_BETA_FEATURES=false

# Debug Settings
DEBUG_MODE=true
LOG_LEVEL=debug
ENABLE_FLIPPER=true

# Social Proof Settings
ENABLE_SOCIAL_PROOF=true
SOCIAL_PROOF_REFRESH_INTERVAL=30000

# Detection Algorithm Settings
MIN_WAIT_TIME_SECONDS=300
LOCATION_ACCURACY_METERS=50
DETECTION_INTERVAL_SECONDS=60

# Monetization Settings
MIN_PAYOUT_AMOUNT=5.00
MAX_DAILY_EARNINGS=100.00
REFERRAL_BONUS_AMOUNT=10.00

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Third Party Integrations
MIXPANEL_TOKEN=your_mixpanel_token_here
SENTRY_DSN=your_sentry_dsn_here
AMPLITUDE_API_KEY=your_amplitude_key_here
